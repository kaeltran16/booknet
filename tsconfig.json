{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "baseUrl": "./",
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "noImplicitAny": false
  },
  "exclude": [
    "node_modules"
  ]
}
